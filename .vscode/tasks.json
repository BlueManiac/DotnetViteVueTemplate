{
    "version": "2.0.0",
    "options": {
        "env": {
            "DOTNET_WATCH_RESTART_ON_RUDE_EDIT": "true"
        }
    },
    "tasks": [
        {
            "label": "build backend",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/Web/Web.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/src/Web/Web.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "/p:PublishProfile=${workspaceFolder}/src/Web/Properties/PublishProfiles/FolderProfile.pubxml",
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch backend",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/src/Web/Web.csproj"
            ],
            "problemMatcher": "$msCompile",
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "group": "watch",
                "close": true
            }
        },
        {
            "label": "watch frontend",
            "type": "shell",
            "command": "powershell",
            "args": [
                "${workspaceFolder}/src/Web/Properties/npmrun.ps1"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "group": "watch",
                "close": true
            }
        },
        {
            "label": "watch",
            "problemMatcher": [],
            "dependsOn": [
                "watch frontend",
                "watch backend"
            ]
        },
        {
            "label": "update",
            "problemMatcher": [],
            "dependsOn": [
                "update backend",
                "update frontend"
            ]
        },
        {
            "label": "update backend",
            "command": "dotnet",
            "type": "process",
            "args": [
                "outdated",
                "${workspaceFolder}/src/Web/Web.csproj"
            ],
            "problemMatcher": []
        },
        {
            "label": "update frontend",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "update"
            ],
            "options": {
                "cwd": "${workspaceFolder}/src/Web"
            },
            "problemMatcher": []
        }
    ]
}