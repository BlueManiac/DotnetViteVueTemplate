{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2017",
    "moduleResolution": "bundler",
    "types": [
      // Syntax highlighting for ex. import.meta.hot in vite
      "vite/client",
      // Syntax highlighting for core-js
      "core-dts",
      // Icon component syntax highlighting
      "unplugin-icons/types/vue",
      // Syntax highlightning for routes
      "unplugin-vue-router/client"
    ],
    "baseUrl": "./",
    "paths": {
      // Support absolute imports
      "/*": [
        "*"
      ]
    }
  }
}